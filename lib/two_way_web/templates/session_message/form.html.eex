<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <%= label f, :label %>
  <%= text_input f, :label %>
  <%= error_tag f, :label %>

  <%= label f, :body %>
  <%= textarea f, :body %>
  <%= error_tag f, :body %>

  <%= label f, :is_reserved %>
  <%= checkbox f, :is_reserved %>
  <%= error_tag f, :is_reserved %>

  <%= label f, :is_active %>
  <%= checkbox f, :is_active %>
  <%= error_tag f, :is_active %>

  <%= label f, :is_source %>
  <%= checkbox f, :is_source %>
  <%= error_tag f, :is_source %>

  <%= label f, :is_translated %>
  <%= checkbox f, :is_translated %>
  <%= error_tag f, :is_translated %>

  <%= label f, :language_id %>
  <%= number_input f, :language_id %>
  <%= error_tag f, :language_id %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>
